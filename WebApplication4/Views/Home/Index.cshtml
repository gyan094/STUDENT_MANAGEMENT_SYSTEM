@model IEnumerable<WebApplication4.Models.Student>

@{
    ViewBag.Title = "Index";
    Layout = null;

}

<link href="~/Content/bootstrap.rtl.css" rel="stylesheet" />

<h2>All Information</h2>
@Html.Raw(TempData["InsertMessage"])
@Html.Raw(TempData["UpdateMessage"])
@Html.Raw(TempData["DeleteMessage"])


<p>
    <td style="position: relative;">
        <div style="position: absolute; bottom: 0; left: 50%; transform: translateX(-50%);">
            @Html.ActionLink("Create New Data", "Create", null, new { @class = "btn btn-outline-primary" })
        </div>
    </td>

</p>
<table class="table table-striped table-bordered border-primary table-responsive">
    <tr>
        @*<th>
            @Html.DisplayNameFor(model => model.Id)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @*<td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-outline-info" })
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-outline-success" })
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-outline-danger" })
            </td>
        </tr>
    }

</table>
